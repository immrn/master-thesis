        \renewcommand{\mddefault}{eb}%
        \renewcommand{\bfdefault}{ub}%
        %
        \setkeys{TUBAFhausschrift}{\savevalue{alt}=black}%
        \setlength{\TUBAFhausschrift@strichstaerkei}{2.43pt}%
        \renewcommand{\TUBAFhausschrift@strichstaerkecor}{.48}%
    \fi%
    }{\PackageWarningNoLine{\TUBAFhausschrift@name}{The input 'staerke=\val' is incorrect and ignored}}%
}
