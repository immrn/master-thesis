% Paketoptionen
\DeclareOptionX{staerke}[mediumlight]{%
    \XKV@cc*+[\val\nr]{#1}{false,true,light,mediumlight,medium,heavy,bold,black}{%
    \ifcase\nr\relax%
        % false
        \setboolean{TUBAFhausschrift@futura}{false}%
       \or%
        % true = mediumlight
        \renewcommand{\seriesdefault}{m}%
        \renewcommand{\mddefault}{m}%
        \renewcommand{\bfdefault}{mb}%
        %
        \setkeys{TUBAFhausschrift}{\savevalue{alt}=mediumlight}%
        \setlength{\TUBAFhausschrift@strichstaerkei}{.78pt}%
        \renewcommand{\TUBAFhausschrift@strichstaerkecor}{.17}%
       \or%
        % light (Light/Book)
        \renewcommand{\seriesdefault}{l}%
        \renewcommand{\mddefault}{l}%
        \renewcommand{\bfdefault}{m}%
        %
        \setkeys{TUBAFhausschrift}{\savevalue{alt}=light}%
        \setlength{\TUBAFhausschrift@strichstaerkei}{.59pt}%
        \renewcommand{\TUBAFhausschrift@strichstaerkecor}{.14}%
       \or%
        % medium light (Book/Medium}
        \renewcommand{\seriesdefault}{m}%
        \renewcommand{\mddefault}{m}%
        \renewcommand{\bfdefault}{mb}%
        %
        \setkeys{TUBAFhausschrift}{\savevalue{alt}=mediumlight}%
        \setlength{\TUBAFhausschrift@strichstaerkei}{.78pt}%
        \renewcommand{\TUBAFhausschrift@strichstaerkecor}{.17}%
       \or%
        % medium (Medium/Heavy}
        \renewcommand{\seriesdefault}{mb}%
        \renewcommand{\mddefault}{mb}%
        \renewcommand{\bfdefault}{sb}%
        %
        \setkeys{TUBAFhausschrift}{\savevalue{alt}=medium}%
        \setlength{\TUBAFhausschrift@strichstaerkei}{1.05pt}%
        \renewcommand{\TUBAFhausschrift@strichstaerkecor}{.23}%
       \or%
        % heavy (Heavy/Bold}
        \renewcommand{\seriesdefault}{sb}%
        \renewcommand{\mddefault}{sb}%
        \renewcommand{\bfdefault}{b}%
        %
        \setkeys{TUBAFhausschrift}{\savevalue{alt}=heavy}%
        \setlength{\TUBAFhausschrift@strichstaerkei}{1.36pt}%
        \renewcommand{\TUBAFhausschrift@strichstaerkecor}{.28}%
       \or%
        % bold (Bold/Extra Black}
        \renewcommand{\seriesdefault}{b}%
        \renewcommand{\mddefault}{b}%
        \renewcommand{\bfdefault}{eb}%
        %
        \setkeys{TUBAFhausschrift}{\savevalue{alt}=bold}%
        \setlength{\TUBAFhausschrift@strichstaerkei}{1.75pt}%
